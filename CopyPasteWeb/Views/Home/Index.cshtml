@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>@Constants.ProductName</h1>
    <p class="lead">@Constants.ProductDescription</p>

    <hr />

    <form class="form-inline">
        <button type="button" id="btn-nova-sessao" class="btn btn-lg btn-default">Nova sessão</button>
        <div class="form-group form-group-lg">
            <input type="text" id="txt-sessao" class="form-control">
        </div>
        <button type="button" id="btn-iniciar" class="btn btn-lg btn-primary">Iniciar</button>
    </form>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            var _enabled = function (enabled) {
                $('#btn-nova-sessao').prop('disabled', !enabled);
                $('#txt-sessao').prop('disabled', !enabled);
                $('#btn-iniciar').prop('disabled', !enabled);
            }

            $('#btn-nova-sessao').click(function () {
                _enabled(false);

                $.get("@ViewBag.UrlNewSession", function (data, status, config) {
                    if (config.statusText === 'OK') {
                        $('#txt-sessao').val(data);
                    } else {
                        $('#txt-sessao').val('Error!');
                    }
                    
                    _enabled(true);
                });
            });

            $('#btn-iniciar').click(function () {
                var session = $('#txt-sessao').val();

                if (typeof (session) === 'string' && session.length === 32) {
                    var url = '@ViewBag.UrlSession' + '?id=' + session;

                    window.location.replace(url);

                    return;
                }

                alert('Informe uma sessão!');
            });

        });
    </script>
}